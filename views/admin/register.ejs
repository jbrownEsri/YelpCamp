<% include ../partials/header.ejs %>

<div class="container">
    <h1>Sign Up</h1>
    <% if (typeof(currentUser) == 'undefined') { %> 
        <form action="/register" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="username" name="username" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="password" name="password" required>
            </div>
            <div class="form-group">
                <select class="form-control form-control-sm" name="userlevel" required>
                    <option>Select User Level</option>
                    <option>Administrator</option>
                    <option>Regular User</option>
                </select>
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary">Register</button>
            </div>
        </form>
    <% } %>
</div>

<% include ../partials/footer.ejs %>